<h1>Listing posts</h1>

<% @posts.each do |post| %>
    <h3><%= post.title %></h3>
    <br>
    <p><%= post.content %></p>
    <br>
    <div>
    <%= link_to 'Voir', post %>
    <%= link_to 'Editer', edit_post_path(post)  %>
    <%= link_to 'Supprimer', post, confirm: "Voulez vous vraiment le supprimer ?", method: :delete %>
    </div>
<% end %>

<div><%= will_paginate @posts %></div>


<br />

<div><%= link_to 'New Post', new_post_path %>   </div>
